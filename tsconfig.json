{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitUserScrict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "outDir": "lib",
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "es2015"],
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "utils": ["src/utils/index"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}